/*

VARIABLES

*/

body_background_color = #000000;
sidebar_width = 75px;
sidebar_background_color = #202020;
sidebar_button_hover_opacity = 0.8;
sidebar_separator_color = #046904;
pointer_color = #666666;


/*

BASE

*/

body{
    background-color:body_background_color;
    margin:0;
    min-height:100%;
    min-width:100%;
    width:100%;
    height:100%;
    position:relative;
}

/*

SIDEBAR

*/


// Marco del sidebar
#sidebar{
    background-color:sidebar_background_color;
    width:sidebar_width;
    position: absolute;
    height: 100%;
}

// Boton de cambiar color
.sidebar_button_color{
    height: 40px;
    width: 40px;
    position: relative;
    background-color: #BBB;
    margin: 20px auto;
    border-radius: 20px;
    border: 1px solid #ffffff;

    // Men√∫ desplegable del selector de color
    .drop_color{
        position: absolute;
        display: none;
        width: 330px;
        height: 40px;
        border: 1px solid #424242;
        margin-left: 75px;
        border-radius: 5px;
        background-color: #222;

        .color_button{
            width: 30px;
            height: 30px;
            margin: 5px;
            background-color: white;
            border-radius: 20px;
            float:left;
        }

        .color_button:hover{
            opacity:sidebar_button_hover_opacity;
        }
    }

}

.sidebar_button_color:hover{
    opacity:sidebar_button_hover_opacity;
}


.sidebar_weight_button{
    height: 40px;
    width: 40px;
    margin: 20px auto;
    position: relative;
    background-color: #333;
    border-radius: 20px;
    border: 1px solid #ffffff;


    .weight_point{
        position:absolute;
        top:0;
    }

    .weight_point_tam01{
        background-color: #ffffff;
        width: 6px;
        height: 6px;
        margin: 0 auto;
        position: relative;
        top: 43%;
        border-radius: 5px;
    }

    .weight_point_tam02{
        background-color: #ffffff;
        width: 15px;
        height: 15px;
        margin: 0 auto;
        position: relative;
        top: 31%;
        border-radius: 13px;
    }

    .weight_point_tam03{
        background-color: #ffffff;
        width: 22px;
        height: 22px;
        margin: 0 auto;
        position: relative;
        top: 23%;
        border-radius: 22px;
    }

    .weight_point_tam04{
        background-color: #ffffff;
        width: 30px;
        height: 30px;
        margin: 0 auto;
        position: relative;
        top: 12%;
        border-radius: 13px;
    }

    // Menu Desplegable del ancho del trazos
    .drop_weight{
        position:absolute;
        display:none;
        width: 170px;
        height: 40px;
        border: 1px solid #424242;
        //margin-left: 75px;
        border-radius: 5px;
        background-color: #222;
        margin-left:75px;
        top:0;

        .weight_button_01{
            width: 10px;
            height: 10px;
            margin: 15px 10px;
            background-color: white;
            border-radius: 20px;
            float:left;
        }

        .weight_button_02{
            width: 20px;
            height: 20px;
            margin: 10px 10px;
            background-color: white;
            border-radius: 20px;
            float:left;
        }

        .weight_button_03{
            width: 30px;
            height: 30px;
            margin: 5px 10px;
            background-color: white;
            border-radius: 20px;
            float:left;
        }

        .weight_button_04{
            width: 35px;
            height: 35px;
            margin: 2px 5px;
            background-color: white;
            border-radius: 20px;
            float:left;
        }

        .weight_button01:hover,.weight_button_02:hover,.weight_button_03:hover,.weight_button_04:hover{
            opacity:sidebar_button_hover_opacity;
        }


    }
}

.sidebar_weight_button:hover{
    opacity:sidebar_button_hover_opacity;
}


// Boton normal
.sidebar_button{
    height: 40px;
    margin-bottom: 20px;
    margin: 10px;
    position:relative;

    img{
        width: 40px;
        height: 40px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin: auto;
    }

}

.sidebar_button:hover{
    opacity:sidebar_button_hover_opacity;
}

// Boton de cambiar de capa
.sidebar_button_layer{
    margin: 10px;
    img{
        width: 40px;
        height: 50px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin: auto;
    }
}

.sidebar_button_layer:hover{
    opacity:sidebar_button_hover_opacity;
}

// Separador del sidebar
.sidebar_separator{
    width: 100%;
    border: 1px solid sidebar_separator_color;
}



#share_dialog{
    visibility: hidden;
    z-index:9999;
    position:absolute;
    width:400px;
    height:200px;
    padding:10px;
    top:50%;
    left:50%;
    background-color:#333333;
    border:1px solid #444444;
    border-radius:5px;
    margin-top:-100px;
    margin-left:-200px;
    font-family:"Helvetica", Arial, sans-serif;
    color:#fff;

    .shareDialogInput{
        width:98%;
        font-size:1em;
        display:block;
        height:30px;

    }

    h1{
        font-size:1.8em;
        font-weight:normal;
        margin-bottom:10px;
    }

    p,a{
        font-size:0.8em;
        color:#fff;
    }

    .close_button{
        float: right;
        background-color: #252525;
        border: 1px solid #444;
        border-radius: 6px;
        padding: 8px 28px;
        font-size: .8em;
        color: #fff;
    }


    .close_button:hover{
        background-color:#444444;
    }
}


