// Marco del sidebar
#sidebar{
    background-color:sidebar_background_color;
    width:sidebar_width;
    position: absolute;
    height: 100%;
    z-index: 10;
    #btnHome {
        display: block;
        background-color: #0f0f0f;
        text-align: center;
        height: 32px;
        border-bottom: 1px solid #404041;
        line-height: 32px;

        img {
            width: 15px;
        }
    }
    // Boton de cambiar color
    .sidebar_button_color{
        height: 40px;
        width: 40px;
        position: relative;
        background-color: #AE00ff;
        margin: 20px auto;
        border-radius: 100%;
    // border: 1px solid #ffffff;

    // Men√∫ desplegable del selector de color
        .drop_color{
            position: absolute;
            display: none;
            width: 330px;
            height: 40px;
            border: 1px solid #424242;
            margin-left: icon_width*1.2;
            border-radius: 5px;
            background-color: #222;
            .colors-wrap{
                display: flex;
                align-items: center;
                justify-content: space-evenly;
                height:100%;
            }
            .color_button{
                width: 30px;
                height: 30px;
            //margin: 5px;
                background-color: white;
                border-radius: 100%;
                float:left;
            }

            .color_button:hover{
                opacity:sidebar_button_hover_opacity;
            }
        }

    }

    .sidebar_weight_button{
        height: 40px;
        width: 40px;
        margin: 20px auto;
        position: relative;
    // background-color: #333;
        border-radius: 20px;
        display: flex;
        align-items: center;
        border: 1px solid #404041;
    // cursor: pointer;

        .weight_point{
            background-color: #ffffff;
            margin: 0 auto;
            position: relative;
            border-radius: 100%;
        }

        .weight_point_tam01{
            width: 6px;
            height: 6px;
        }

        .weight_point_tam02{
            width: 15px;
            height: 15px;
        }

        .weight_point_tam03{
            width: 22px;
            height: 22px;
        }

        .weight_point_tam04{
            width: 30px;
            height: 30px;
        }

    // Menu Desplegable del ancho del trazos
        .drop_weight{
            position:absolute;
            display:none;
            width: 170px;
            height: 40px;
            border: 1px solid #424242;
            margin-left: icon_width*1.2;
            border-radius: 5px;
            background-color: #222;
            top:0;
            .weight_wrap{
                display: flex;
                align-items: center;
                justify-content: space-evenly;
                height:100%;
            }
            .weight_button{
                background-color: white;
                border-radius: 100%;
                float:left;
            }
            .weight_button_01{
                width: 10px;
                height: 10px;
            }

            .weight_button_02{
                width: 20px;
                height: 20px;
            }

            .weight_button_03{
                width: 30px;
                height: 30px;
            }

            .weight_button_04{
                width: 35px;
                height: 35px;
            }

            .weight_button01:hover,.weight_button_02:hover,.weight_button_03:hover,.weight_button_04:hover{
                opacity:sidebar_button_hover_opacity;
            }


        }
    }

    // Boton normal
    .sidebar_button{
        margin-bottom: 20px;
        position:relative;
        cursor: pointer;

        .wrapper {
            margin: 0 auto;
            width: icon_width;
            height: icon_width;
            border: 1px solid #404041;
            border-radius: 100%;
            position: relative;
        }

        .wrapper.wrapperCapa {
            border: none;
            border-radius: 0;
        }

        .wrapperCapa {
            img {
                position: absolute;

                &:nth-child(1) {
                    top: -10%;
                    z-index: 10;
                }
                &:nth-child(2) {
                    top: 15%;
                    z-index: 9;
                }
                &:nth-child(3) {
                    top: 40%;
                    z-index: 8;
                }
                &:nth-child(4) {
                    top: 65%;
                    z-index: 7;
                }
            }
        }

        #loop.wrapper.inactive {
            border: 1px solid #00FF00;
        }

        .wrapperSimple:hover {
            background-color: #114412;
        }

        .wrapperVertical {
            &.down {
                background: linear-gradient(0deg, #114412 50%, rgba(0,0,0,0) 50%);
            }
            &.up {
                background: linear-gradient(0deg, rgba(0,0,0,0) 50%, #114412 50%);
            }

            .clickUp, .clickDown {
                width: icon_width;
                height: 22.5px;
                position: absolute;
                border-radius: icon_width icon_width 0 0;

                &:hover {
                    background: url("../img/flecha_arr.svg");
                    background-repeat: no-repeat;
                    background-size: 12px;
                    background-position: top center;
                }
            }
            .clickDown {
                bottom: 0;
                border-radius: 0 0 icon_width icon_width;

                &:hover {
                    background: url("../img/flecha_ab.svg");
                    background-repeat: no-repeat;
                    background-size: 12px;
                    background-position: bottom center;
                }
            }
        }
        .wrapperHorizontal {
            &.down {
                background: linear-gradient(90deg, #114412 50%, rgba(0,0,0,0) 50%);
            }
            &.up {
                background: linear-gradient(90deg, rgba(0,0,0,0) 50%, #114412 50%);
            }

            .clickLeft, .clickRight {
                width: 22.5px;
                height: icon_width;
                position: absolute;
                border-radius: icon_width 0 0 icon_width;
            // background: url("../img/flecha_iz.svg");

                &:hover {
                    background: url("../img/flecha_iz.svg");
                    background-repeat: no-repeat;
                    background-size: 16px;
                    background-position: center left;
                }
            }
            .clickRight {
                right: 0;
                border-radius: 0 icon_width icon_width 0;

                &:hover {
                    background: url("../img/flecha_de.svg");
                    background-repeat: no-repeat;
                    background-size: 16px;
                    background-position: center right;
                }

            }
        }

        img{
            width: icon_width;
            display: block;
            margin: 0 auto;
        }

        &.delete-btn img {
            width: 28px;
            margin-top: 8px;
            margin-left: 9px;
        }
        &.share-btn img {
            width: 38px;
            margin-left: 10px;
            margin-top: -1px;
        }
        .button-badge {
            display: none;
            background-color: #fa3e3e;
            border-radius: 2px;
            color: white;
            padding: 1px 3px;
            font-size: 10px;
            position: absolute;
            top: 0;
            right: 10px;
            z-index: 99;
        }
    }

    .sidebar_button:hover{
    // opacity:sidebar_button_hover_opacity;
    }

    // Boton de cambiar de capa
    .sidebar_button_layer{
        margin: 10px;
        img{
            width: 40px;
            height: 50px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin: auto;
        }
    }

    .sidebar_button_layer:hover{
        opacity:sidebar_button_hover_opacity;
    }

    // Separador del sidebar
    .sidebar_separator{
        width: 97%;
        border: 1px solid sidebar_separator_color;
        margin-bottom: 1em;
    }

}

