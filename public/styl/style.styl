/*

BASE

*/

body{
    background-color:body_background_color;
    margin:0;
    min-height:100%;
    min-width:100%;
    width:100%;
    height:100%;
    position:relative;
}

/*

SIDEBAR

*/


// Marco del sidebar
#sidebar{
    background-color:sidebar_background_color;
    width:sidebar_width;
    position: absolute;
    height: 100%;
}

#btnHome {
    display: block;
    background-color: #0f0f0f;
    text-align: center;
    height: 32px;
    border-bottom: 1px solid #404041;
    line-height: 32px;

    img {
